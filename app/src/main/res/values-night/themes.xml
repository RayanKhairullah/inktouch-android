<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme - Coffee/Cafe Night Mode -->
    <style name="Base.Theme.EasyCoff" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors: Lighter Brown for dark mode -->
        <item name="colorPrimary">@color/coffee_light</item>
        <item name="colorPrimaryVariant">@color/coffee_medium</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary/Accent Colors -->
        <item name="colorSecondary">@color/caramel_accent</item>
        <item name="colorSecondaryVariant">@color/latte_cream</item>
        <item name="colorOnSecondary">@color/coffee_dark</item>
        
        <!-- Background & Surface: Dark Coffee -->
        <item name="android:colorBackground">@color/coffee_dark</item>
        <item name="colorSurface">@color/coffee_primary</item>
        <item name="colorOnSurface">@color/latte_cream</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/latte_cream</item>
        <item name="android:textColorSecondary">@color/caramel_accent</item>
        <item name="android:textColorHint">@color/coffee_light</item>
    </style>
</resources>